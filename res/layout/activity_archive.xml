<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg" >
    <RelativeLayout
        android:id="@+id/archive_layout_header"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/main">
        <ImageView
            android:id="@+id/archive_image_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:scaleType="fitXY"
            android:background="@drawable/arrow_left_white_wide" />
        <TextView
            android:id="@+id/archive_label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="健康档案" />
    </RelativeLayout>
    <WebView
        android:id="@+id/archive_web_data"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/archive_layout_header" />
    <RelativeLayout
        android:id="@+id/archive_layout_examination"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/archive_web_data"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
    	android:background="@color/white">
        <ImageView
            android:id="@+id/archive_image_examination"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_archive_examination" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/archive_image_examination"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="14sp" 
            android:text="体检报告" />
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
	<RelativeLayout
        android:id="@+id/archive_layout_medical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/archive_layout_examination"
        android:layout_marginTop="1dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
    	android:background="@color/white">
        <ImageView
            android:id="@+id/archive_image_medical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_archive_medical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/archive_image_medical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="14sp" 
            android:text="电子病历" />
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
	<RelativeLayout
        android:id="@+id/archive_layout_wearables"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/archive_layout_medical"
        android:layout_marginTop="1dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
    	android:background="@color/white">
        <ImageView
            android:id="@+id/archive_image_wearables"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_archive_wearables" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/archive_image_wearables"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="14sp" 
            android:text="穿戴数据" />
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
</RelativeLayout>
