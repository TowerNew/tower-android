<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/home_layout_head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/main"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <Button
            android:id="@+id/doctordetail_return_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/arrow_left_white_wide"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/home_caption"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/doctor_photo_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:src="@drawable/askdoctor_chat_other" />

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.28"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/doctor_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="王AA"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/doctor_department_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button_green"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="妇科少室山"
                        android:textColor="@color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/doctor_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="妇科主任"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/doctor_des_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:maxLines="10"
                    android:text="描述"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/doctordetail_image_discount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_circle_green"
                android:padding="2dp"
                android:text="问"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_circle_blue"
                android:padding="2dp"
                android:text="预"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

       <RelativeLayout
			        android:id="@+id/doctor_layout_detail"
			        android:layout_width="match_parent"
			        android:layout_height="30dp"
			        android:layout_alignParentLeft="true"
			        android:layout_below="@+id/layout00"
			        android:background="@color/grey_bg"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="10dp"
			            android:layout_marginTop="5dp"
			            android:text="医生简介"
			            android:textColor="@color/grey_text"
			            android:textSize="14sp" />
    </RelativeLayout>

        <TextView
            android:id="@+id/doctor_skill_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="5"
            android:ellipsize="end"
			android:scrollbars = "vertical"
            android:text="技能" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/docgrey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/user_comments_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="用户评价 （190）" />

        <View
            android:id="@+id/div_vote"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/docgrey" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/gap_line_length"
        android:layout_marginRight="@dimen/gap_line_length"
        android:background="@color/docgrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <ListView
            android:id="@+id/doctor_comments_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/gap_line_length"
            android:layout_marginRight="@dimen/gap_line_length"
            android:background="@color/white"
            android:divider="@drawable/divider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/inquiry_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center">

         <ImageView
             android:id="@+id/doctor_icon_collection"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/favorite_normal" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/setDoctor_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/main"
            android:layout_gravity="center">

            <Button
		        android:id="@+id/doctor_btn_set"
		        android:layout_width="wrap_content"
		        android:layout_height="40dp"
		        android:layout_alignParentBottom="true"
		        android:layout_alignParentRight="true"
		        android:layout_below="@+id/relativeLayout2"
		        android:layout_toRightOf="@+id/doctordetail_layout_collection"
		        android:background="@color/main"
		        android:text="设为私人医生"
		        android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>