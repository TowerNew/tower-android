<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
		android:id="@+id/home_layout_head"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_alignParentTop="true" 
		android:background="@drawable/topbar" 
		android:focusable="true"
		android:focusableInTouchMode="true">
		<Button
            android:id="@+id/home_button_region"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/button_home_region"
            android:text="@string/home_region_default"
            android:ellipsize="start"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
        <Button
            android:id="@+id/home_button_notify"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/button_home_notify" />
        <EditText
            android:id="@+id/home_text_search"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/home_search"
            android:gravity="center"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:cursorVisible="true"
            android:imeOptions="actionSearch"
            android:text="@string/search_tip"
            android:textColor="@color/grey"
            android:textSize="15sp" />
	</RelativeLayout>
    <ListView
        android:id="@+id/home_list_news"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below ="@+id/home_layout_head"
        android:background="@color/hot_bg"
        android:divider="@drawable/divider" />
</RelativeLayout>
