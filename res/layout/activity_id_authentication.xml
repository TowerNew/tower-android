<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
            android:id="@+id/userinfo_layout_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="@color/main">
			<ImageView
                android:id="@+id/authentication_image_close"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="0dp"
	            android:scaleType="fitXY"
	            android:background="@drawable/arrow_left_white_wide" />
			<TextView
                android:id="@+id/userinfo_label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="实名认证"
                android:textColor="@color/white"
                android:textSize="18sp" />
		</RelativeLayout>

		<RelativeLayout
		    android:id="@+id/userinfo_layout_name"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:layout_below="@id/userinfo_layout_header"
            android:background="@color/white">
			<TextView
                android:id="@+id/userinfo_label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="真实姓名"
                android:textColor="@color/black"
                android:textSize="18sp" />
			<ImageView
				android:id="@+id/userinfo_image_name"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
				android:background="@drawable/arrow" />

			<TextView
			    android:id="@+id/userinfo_text_name"
			    android:layout_width="wrap_content"
			    android:layout_height="40dp"
			    android:layout_alignBaseline="@+id/userinfo_label_name"
			    android:layout_alignBottom="@+id/userinfo_label_name"
			    android:layout_toLeftOf="@+id/userinfo_image_name"	
			    android:layout_marginRight="15dp"		    
			    android:text="未填写"
			    android:textColor="@color/grey_text"
			    android:textSize="16sp" />

		</RelativeLayout>
		<ImageView
            android:id="@+id/userinfo_divide1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userinfo_layout_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/divider" >
		</ImageView>
		<RelativeLayout
            android:id="@+id/userinfo_layout_idnumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/userinfo_divide1"
            android:background="@color/white">
			<TextView
                android:id="@+id/userinfo_label_idnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="身份证号"
                android:textColor="@color/black"
                android:textSize="18sp" />
			<ImageView
				android:id="@+id/userinfo_image_idnumber"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
				android:background="@drawable/arrow" />

			<TextView
			    android:id="@+id/userinfo_text_idnumber"
			    android:layout_width="wrap_content"
			    android:layout_height="40dp"
			    android:layout_alignBaseline="@+id/userinfo_label_idnumber"
			    android:layout_alignBottom="@+id/userinfo_label_idnumber"
			    android:layout_marginRight="15dp"
			    android:layout_toLeftOf="@+id/userinfo_image_idnumber"
			    android:gravity="right|center"
			    android:text="未填写"
			    android:textColor="@color/grey_text"
			    android:textSize="16sp" />

		</RelativeLayout>
		<ImageView
            android:id="@+id/userinfo_divide2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userinfo_layout_idnumber"
            android:background="@drawable/divider" >
		</ImageView>
		<RelativeLayout
            android:id="@+id/userinfo_layout_snapshot"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/userinfo_divide2"
            android:background="@color/white">
			<ImageView
				android:id="@+id/userinfo_image_snapshot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
				android:src="@drawable/chat_picture"
				android:scaleType="fitXY" />

        <TextView
            android:id="@+id/text_hit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="请确保图片清晰可见"
            android:textColor="@color/grey_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/userinfo_label_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/userinfo_label_snapshot"
            android:text="仅用于身份认证 他人不可见"
            android:textColor="@color/grey_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/userinfo_label_snapshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="上传正面个人身份证"
            android:textColor="@color/black"
            android:textSize="18sp" />

</RelativeLayout>
		<ImageView
		    android:id="@+id/userinfo_divide3"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/divider" 
		    android:layout_below="@id/userinfo_layout_snapshot"/>

		<TextView
		    android:id="@+id/hit"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/userinfo_divide3"
		    android:padding="10dp"
		    android:layout_marginLeft="10dp"		  
		    android:text="!实名认证不能修改  请认真填写" 
		    android:textSize="14sp"
		    android:textColor="@color/orange"/>
        <Button
		    android:id="@+id/userinfo_button_submit"
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:layout_below="@id/hit"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="20dp"
		    android:layout_marginLeft="20dp"
		    android:layout_marginRight="20dp"	    
		    android:text="提交审核" 
		    android:textColor="#ffffffff"
	        android:textSize="15sp"
	        android:background="@drawable/button_submit" />
		
</LinearLayout>
