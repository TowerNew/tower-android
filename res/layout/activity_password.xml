<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
	<RelativeLayout
		android:id="@+id/password_layout_header"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_alignParentTop="true"
		android:background="@color/main" >
		<ImageView
            android:id="@+id/password_image_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/arrow_left" />
        <TextView
            android:id="@+id/password_label_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="安全密码"
            android:textColor="@color/white"
            android:textSize="18sp" />
	</RelativeLayout>
	<EditText
	    android:id="@+id/password_text_password"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:singleLine="true"
		android:text=""
		android:inputType="number"
		android:imeOptions="actionDone"
	    android:textColor="@color/black"
	    android:background="@color/black" />
    <TextView
	    android:id="@+id/password_lable_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"  
	    android:layout_marginTop="80dp"
	    android:gravity="center"
	    android:text="请设置安全密码"
	    android:textColor="@color/white"
	    android:textSize="20sp" />
	<LinearLayout
	    android:id="@+id/password_layout_password"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="60dp"
	    android:orientation="horizontal">
		<TextView
			android:id="@+id/password_label_password1"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_margin="2dp"
	        android:gravity="center"
	        android:background="@color/white"
	        android:textColor="@color/black"
	        android:textSize="18sp" />
		<TextView
			android:id="@+id/password_label_password2"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_margin="2dp"
	        android:gravity="center"
	        android:background="@color/white"
	        android:textColor="@color/black"
	        android:textSize="18sp" />
		<TextView
			android:id="@+id/password_label_password3"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_margin="2dp"
	        android:gravity="center"
	        android:background="@color/white"
	        android:textColor="@color/black"
	        android:textSize="18sp" />
		<TextView
			android:id="@+id/password_label_password4"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_margin="2dp"
	        android:gravity="center"
	        android:background="@color/white"
	        android:textColor="@color/black"
	        android:textSize="18sp" />
		<TextView
			android:id="@+id/password_label_password5"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_margin="2dp"
	        android:gravity="center"
	        android:background="@color/white"
	        android:textColor="@color/black"
	        android:textSize="18sp" />
		<TextView
			android:id="@+id/password_label_password6"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_margin="2dp"
	        android:gravity="center"
	        android:background="@color/white"
	        android:textColor="@color/black"
	        android:textSize="18sp" />
	</LinearLayout>
	<Button
	    android:id="@+id/password_button_confirm"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="50dp"
	    android:background="@drawable/button_password_confirm"
	    android:text="下一步"
	    android:textSize="18sp"
	    android:textColor="@color/white" />
</LinearLayout>
