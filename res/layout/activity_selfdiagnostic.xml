<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
		android:id="@+id/selfdiagnostic_layout_head"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_alignParentTop="true" 
		android:background="@drawable/topbar" 
		android:focusable="true"
		android:focusableInTouchMode="true">
		<ImageButton
            android:id="@+id/selfdiagnostic_button_return"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/button_return" />
        <TextView
            android:id="@+id/selfdiagnostic_text_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="自我诊断"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
	</RelativeLayout>
	
    <ListView
        android:id="@+id/selfdiagnostic_list_body"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_below="@id/selfdiagnostic_layout_head"
        android:background="@color/lightgrey"
        android:divider="@drawable/divider" />
	<ListView
	    android:id="@+id/selfdiagnostic_list_symptom"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
        android:layout_below="@id/selfdiagnostic_layout_head"
	    android:layout_toRightOf="@id/selfdiagnostic_list_body"
	    android:background="@color/white"
	    android:divider="@drawable/divider" />
</RelativeLayout>
