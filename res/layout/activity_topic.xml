<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
	<RelativeLayout
        android:id="@+id/topic_layout_bar"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@color/lightblue"
        android:orientation="vertical">
		<ImageButton
            android:id="@+id/topic_button_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/transprant"
            android:src="@drawable/left_arrow"
            android:scaleType="fitXY"
            android:textColor="#ffffff"
            android:textSize="18sp" />
		<TextView
            android:id="@+id/topic_label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="问诊"
            android:textColor="#ffffff"
            android:textSize="20.0sp" />
		<TextView
            android:id="@+id/topic_label_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="开始"
            android:textColor="#ffffff"
            android:textSize="20.0sp" />
	</RelativeLayout>
	<EditText
	    android:id="@+id/topic_text_content"
	    android:layout_width="match_parent"
	    android:layout_height="32dp"
        android:layout_below="@id/topic_layout_bar"
	    android:layout_marginLeft="20dp"
	    android:layout_marginBottom="10dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginRight="10dp"
	    android:ems="10"
	    android:inputType="text"
	    android:textColor="@color/grey"
		android:background="@android:color/transparent"
		android:focusable="true" 
		android:focusableInTouchMode="true">
	</EditText>
	<ImageView
        android:id="@+id/topic_divide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topic_text_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/divider" >
	</ImageView>
    <TextView
        android:id="@+id/topic_label_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="20dp"
        android:layout_below="@id/topic_divide"
        android:text="请输入问题描述"
        android:textColor="@color/grey"
        android:textSize="18sp" />
</RelativeLayout>
