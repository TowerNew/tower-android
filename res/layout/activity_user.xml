<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
		android:id="@+id/user_layout_header"
		android:layout_width="match_parent"
		android:layout_height="160dp"
		android:layout_alignParentTop="true" 
		android:background="@drawable/user_bg" >
		<ImageButton
		    android:id="@+id/user_button_photo"
		    android:layout_width="70dp"
		    android:layout_height="70dp"
			android:layout_marginTop="30dp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerInParent="false"
		    android:layout_gravity="center"
		    android:adjustViewBounds="true"
		    android:background="@drawable/user_photo_null"
		    android:padding="0dip"
		    android:scaleType="fitXY" />
		<ImageView
		    android:id="@+id/user_status"
		    android:layout_width="20dp"
		    android:layout_height="20dp"
		    android:layout_alignRight="@id/user_button_photo"
		    android:layout_alignBottom="@id/user_button_photo"
		    android:layout_marginBottom="10dp"
		    android:layout_marginRight="0dp"
		    android:src="@drawable/icon_user_status"
		    android:visibility="gone" />

        <TextView
            android:id="@+id/user_text_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
			android:layout_below ="@+id/user_button_photo"
        	android:layout_marginTop="10dp"
            android:text="@string/user_name_default"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
	</RelativeLayout>
    <ListView
        android:id="@+id/user_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below ="@+id/user_layout_header"
        android:background="@color/white"
        android:divider="@drawable/divider" />
</RelativeLayout>
