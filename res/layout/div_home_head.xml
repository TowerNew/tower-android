<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:orientation="vertical"
	android:background="@color/white">
	
    <FrameLayout
        android:id="@+id/home_browser"
        android:layout_width="match_parent"
        android:layout_height="210dp" >
        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="210dp" />    
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dip"
            android:gravity="center" >

            <View
                android:id="@+id/v_dot0"
                style="@style/dot_style"
                android:background="@drawable/dot_focused"
                android:visibility="invisible" />

            <View
                android:id="@+id/v_dot1"
                style="@style/dot_style"
                android:visibility="invisible" />

            <View
                android:id="@+id/v_dot2"
                style="@style/dot_style"
                android:visibility="invisible" />

            <View
                android:id="@+id/v_dot3"
                style="@style/dot_style"
                android:visibility="invisible" />

            <View
                android:id="@+id/v_dot4"
                style="@style/dot_style"
                android:visibility="invisible" />
        </LinearLayout>
    </FrameLayout>
	<View 
        android:id="@+id/home_line_1"
	    android:layout_height="2dp"
	    android:layout_width="match_parent"
	    android:background="@color/grey_line"/>
	<GridView
        android:id="@+id/home_gridView"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:columnWidth="90dp"
        android:horizontalSpacing="10dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" >
    </GridView>
	<View
	    android:id="@+id/home_line_2"
	    android:layout_height="10dp"
	    android:layout_width="match_parent"
	    android:background="@color/home_color"/>

	<RelativeLayout
	    android:id="@+id/layout00"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/home_line_2" >
	
	    <RelativeLayout
	        android:id="@+id/home_layout_1"
	        android:layout_width="150dp"
	        android:layout_height="180dp" 
	        android:background="@color/home_child">	        
            <LinearLayout
                android:id="@+id/layout_child" 
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView 
                    android:id="@+id/tv_title_child"    
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:textColor="@color/red"  
                    android:singleLine="true"                   
                    android:textSize="14sp" />
                <TextView 
                    android:id="@+id/tv_subtitle_child" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:singleLine="true"
                    android:textColor="@color/grey_text" 
                    android:textSize="12sp" />
            </LinearLayout>
            <ImageView
	            android:id="@+id/home_img_child"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"		          
	            android:layout_below="@id/layout_child"	
           	    android:layout_marginTop="30dp"       	            
				android:layout_marginLeft="30dp"                   
	            android:scaleType="fitXY" />	          	            	            
				
	    </RelativeLayout>
	
	    <View
	        android:id="@+id/home_line_3"
	        android:layout_width="5dp"
	        android:layout_height="180dp"
	        android:layout_toRightOf="@+id/home_layout_1"
	        android:background="@color/white" />
	
	    <RelativeLayout
	        android:id="@+id/home_layout_2"
	        android:layout_width="match_parent"
	        android:layout_height="80dp"
	        android:layout_toRightOf="@id/home_line_3" 
	        android:background="@color/home_woman">
	        <ImageView
	            android:id="@+id/home_img_woman"
	            android:layout_width="wrap_content"
	            android:layout_height="85dp"
	            android:layout_alignParentLeft="true"        
	            android:scaleType="fitXY" />

	        <LinearLayout
	            android:id="@+id/layout_woman"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginTop="10dp"
	            android:orientation="vertical" >

                <TextView 
                    android:id="@+id/tv_title_woman"    
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:singleLine="true" 
                    android:textColor="@color/orange" 
                    android:textSize="14sp" />
                <TextView 
                    android:id="@+id/tv_subtitle_woman" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:singleLine="true"
                    android:textColor="@color/grey_text" 
                    android:textSize="12sp" />
            </LinearLayout>
	
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:id="@+id/home_layout_3"
	        android:layout_width="wrap_content"
	        android:layout_height="90dp"
	        android:layout_alignBottom="@+id/home_line_3"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/home_layout_2"
	        android:layout_marginTop="5dp"
	        android:layout_toRightOf="@+id/home_line_3"
	        android:background="@color/home_old" >
	         <ImageView
	            android:id="@+id/home_img_old"
	            android:layout_width="wrap_content"
	            android:layout_height="85dp"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentBottom="true"
	            android:layout_alignParentTop="true"
	            android:scaleType="fitXY" />
	        <LinearLayout 
	            android:id="@+id/layout_old"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView 
                    android:id="@+id/tv_title_old"    
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:singleLine="true"
                    android:textColor="@color/green" 
                    android:textSize="14sp" />
                <TextView 
                    android:id="@+id/tv_subtitle_old" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:singleLine="true"
                    android:textColor="@color/grey_text" 
                    android:textSize="12sp" />
            </LinearLayout>
           
	
	    </RelativeLayout>
	</RelativeLayout>

	<View
	    android:id="@+id/home_line_4"
	    android:layout_height="2dp"
	    android:layout_width="match_parent"
	    android:background="@drawable/divider"/> 
	    <View
	    android:id="@+id/home_line_5"
	    android:layout_height="10dp"
	    android:layout_width="match_parent"
	    android:background="@color/home_color"/>
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:orientation="horizontal">
	<ImageView
	    android:id="@+id/home_img_hot"
	    android:layout_width="3dp"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="12dp"
	    android:layout_marginTop="5dp"
	    android:src="@drawable/icon_hot_recommend"/>
	<TextView
		android:id="@+id/home_lable_news"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="5dp"
		android:layout_toRightOf="@id/home_img_hot"
		android:text="@string/hot_recommend"
		android:textColor="@color/home_hot_text"
		android:textSize="14sp" />
</RelativeLayout>
</LinearLayout>
