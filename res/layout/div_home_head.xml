<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:orientation="vertical"
	android:background="@color/white">
    <com.qcast.tower.view.control.ScrollWebView
        android:id="@+id/home_browser"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:scrollbars="none" />
	<View 
        android:id="@+id/home_line_1"
	    android:layout_height="1dp"
	    android:layout_width="match_parent"
	    android:background="@color/grey_line"
	    android:layout_below="@id/home_browser" />
    <com.qcast.tower.view.control.HorizontalScrollViewEx
		android:id="@+id/home_scroll_entry"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
			<LinearLayout
			    android:id="@+id/home_layout_entry1"
			    android:layout_width="100dp"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:orientation="vertical"
			    android:background="@color/white" >
			    <ImageView
					android:id="@+id/home_image_entry1"
			        android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:scaleType="fitCenter"
			        android:src="@drawable/icon_entry_1" />
			    <TextView
			        android:id="@+id/home_label_entry1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="5dp"
			        android:textColor="@color/grey_text"
			        android:text="私人医生" />
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/home_layout_entry2"
			    android:layout_width="100dp"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:orientation="vertical"
			    android:background="@color/white" >
			    <ImageView
					android:id="@+id/home_image_entry2"
			        android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:scaleType="fitCenter"
			        android:src="@drawable/icon_entry_2" />
			    <TextView
			        android:id="@+id/home_label_entry2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="5dp"
			        android:textColor="@color/grey_text"
			        android:text="预约体检" />
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/home_layout_entry3"
			    android:layout_width="100dp"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:orientation="vertical"
			    android:background="@color/white" >
			    <ImageView
					android:id="@+id/home_image_entry3"
			        android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:scaleType="fitCenter"
			        android:src="@drawable/icon_entry_3" />
			    <TextView
			        android:id="@+id/home_label_entry3"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="5dp"
			        android:textColor="@color/grey_text"
			        android:text="预约理疗" />
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/home_layout_entry4"
			    android:layout_width="100dp"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:orientation="vertical"
			    android:background="@color/white" >
			    <ImageView
					android:id="@+id/home_image_entry4"
			        android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:scaleType="fitCenter"
			        android:src="@drawable/icon_entry_4" />
			    <TextView
			        android:id="@+id/home_label_entry4"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="5dp"
			        android:textColor="@color/grey_text"
			        android:text="健康档案" />
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/home_layout_entry5"
			    android:layout_width="100dp"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:orientation="vertical"
			    android:background="@color/white" >
			    <ImageView
					android:id="@+id/home_image_entry5"
			        android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:scaleType="fitCenter"
			        android:src="@drawable/icon_entry_5" />
			    <TextView
			        android:id="@+id/home_label_entry5"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="5dp"
			        android:textColor="@color/grey_text"
			        android:text="预约挂号" />
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/home_layout_entry6"
			    android:layout_width="100dp"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:orientation="vertical"
			    android:background="@color/white" >
			    <ImageView
					android:id="@+id/home_image_entry6"
			        android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:scaleType="fitCenter"
			        android:src="@drawable/icon_entry_6" />
			    <TextView
			        android:id="@+id/home_label_entry6"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="5dp"
			        android:textColor="@color/grey_text"
			        android:text="自我诊断" />
			</LinearLayout>
        </LinearLayout>
    </com.qcast.tower.view.control.HorizontalScrollViewEx>
	<LinearLayout
		android:id="@+id/home_layout_dot"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:orientation="horizontal">
		<ImageView 
			android:id="@+id/home_image_dot1"
	        android:layout_width="6dp"
	        android:layout_height="6dp"
	        android:layout_marginBottom="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/icon_dot_selected" />
		<ImageView 
			android:id="@+id/home_image_dot2"
	        android:layout_width="6dp"
	        android:layout_height="6dp"
	        android:layout_marginBottom="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/icon_dot_unselected" />
	</LinearLayout>
	<View
	    android:layout_height="1dp"
	    android:layout_width="match_parent"
	    android:background="@color/grey_line" />
	<LinearLayout
		android:id="@+id/home_layout_activity"
		android:layout_width="match_parent"
		android:layout_height="90dp"
		android:orientation="horizontal">
		<RelativeLayout
			android:id="@+id/home_layout_left"
		    android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:gravity="center"
    		android:layout_weight="1">
			<ImageView
				android:id="@+id/home_image_left"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_alignParentLeft="true"
				android:layout_marginLeft="10dp"
				android:layout_centerVertical="true"
				android:scaleType="fitXY"
				android:src="@drawable/icon_activity_left" />			
			<TextView
				android:id="@+id/home_label_left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/home_image_left"
				android:layout_marginLeft="10dp"
				android:layout_centerVertical="true"
				android:textColor="@color/black"
				android:text="精美礼物" />
    	</RelativeLayout>
    	<View 
	    	android:layout_height="match_parent"
	    	android:layout_width="1dp"
	    	android:background="@color/grey_line"/>
		<RelativeLayout
			android:id="@+id/home_layout_right"
		    android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:gravity="center"
    		android:layout_weight="1">
			<ImageView
				android:id="@+id/home_image_right"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_alignParentLeft="true"
				android:layout_marginLeft="10dp"
				android:layout_centerVertical="true"
				android:scaleType="fitXY"
				android:src="@drawable/icon_activity_right" />			
			<TextView
				android:id="@+id/home_label_right"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/home_image_right"
				android:layout_marginLeft="10dp"
				android:layout_centerVertical="true"
				android:textColor="@color/black"
				android:text="幸运转盘" />
    	</RelativeLayout>
	</LinearLayout>
	<View
	    android:layout_height="1dp"
	    android:layout_width="match_parent"
	    android:background="@color/grey_line" />
	<TextView
		android:id="@+id/home_lable_news"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="6dp"
		android:paddingTop="2dp"
		android:paddingBottom="2dp"
		android:text="@string/hot_recommend"
		android:background="@color/grey_bg"
		android:textColor="@color/grey_text"
		android:textSize="15sp" />
</LinearLayout>
