<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        	android:id="@+id/user_layout_00"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/user_list"
		    android:orientation="vertical">  
        <View
	        android:id="@+id/user_view_00" 
	        android:layout_width="match_parent"
	        android:layout_height="15dp"	        
	        android:background="@color/grey_bg" />
        <View
	        android:id="@+id/user_view" 
	        android:layout_width="match_parent"
	        android:layout_height="2dp"	        
	        android:layout_below="@id/user_view_00"
	        android:background="@drawable/divider" />
		<RelativeLayout
		    android:id="@+id/user_layout_10"
		    android:layout_width="match_parent"
		    android:layout_height="65dp"
		    android:layout_below="@id/user_view"
		    android:orientation="horizontal">  
	    <ImageView
	        android:id="@+id/user_image_config"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp" 
	        android:background="@drawable/icon_user_config"/>
		<TextView
		    android:id="@+id/user_label_config"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/user_image_config"
		    android:layout_centerVertical="true"
		    android:layout_gravity="center_vertical"
			android:textSize="14sp"
			android:text="系统设置"
			android:textColor="@color/user_text"
		    android:layout_marginLeft="10dp" />
	    <ImageView
	       	android:layout_width="15dp"
	       	android:layout_height="15dp"
		    android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
	       	android:layout_marginRight="10dp"
		    android:src="@drawable/arrow" />	    
	</RelativeLayout> 
	<View 
	    android:id="@+id/user_view_01"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/user_layout_10"
        android:background="@drawable/divider" />
	<RelativeLayout
	    	android:id="@+id/user_layout_20"
		    android:layout_width="match_parent"
		    android:layout_height="65dp"
		    android:layout_below="@id/user_view_01"
		    android:orientation="horizontal">  
	    <ImageView
	        android:id="@+id/user_image_icon"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp" 
	        android:background="@drawable/icon_user_suggest"/>
		<TextView
		    android:id="@+id/user_label_caption"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/user_image_icon"
		    android:layout_centerVertical="true"
		    android:layout_gravity="center_vertical"
			android:textSize="14sp"
			android:text="意见反馈"
			android:textColor="@color/user_text"
		    android:layout_marginLeft="10dp" />
	    <ImageView
	       	android:layout_width="15dp"
	       	android:layout_height="15dp"
		    android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
	       	android:layout_marginRight="10dp"
		    android:src="@drawable/arrow" />
	</RelativeLayout> 
		<View 
		    android:id="@+id/user_view_02"
	        android:layout_width="match_parent"
	        android:layout_height="2dp"
	        android:layout_below="@id/user_layout_20"
	        android:background="@drawable/divider" />
		<View
	        android:id="@+id/user_view_03" 
	        android:layout_width="match_parent"
	        android:layout_height="15dp"
	        android:layout_below="@id/user_view_02"	        
	        android:background="@color/grey_bg" />
		<View 
		    android:id="@+id/user_view_04"
	        android:layout_width="match_parent"
	        android:layout_height="2dp"
	        android:layout_below="@id/user_view_03"
	        android:background="@drawable/divider" />	
	 <RelativeLayout
	    	android:id="@+id/user_layout_30"
		    android:layout_width="match_parent"
		    android:layout_height="65dp"
		    android:layout_below="@id/user_view_03"
		    android:orientation="horizontal">  
	    <ImageView
	        android:id="@+id/user_image_phone"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp" 
	        android:background="@drawable/icon_user_telephone"/>
		<TextView
		    android:id="@+id/user_label_phone"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/user_image_phone"
		    android:layout_centerVertical="true"
		    android:layout_gravity="center_vertical"
			android:textSize="14sp"
			android:text="联系我们"
			android:textColor="@color/user_text"
		    android:layout_marginLeft="10dp" />
	    <ImageView
	       	android:layout_width="15dp"
	       	android:layout_height="15dp"
		    android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
	       	android:layout_marginRight="10dp"
		    android:src="@drawable/arrow" />
	</RelativeLayout> 	   		   
</RelativeLayout>
</RelativeLayout>

