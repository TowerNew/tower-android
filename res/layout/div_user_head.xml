<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" 
	android:orientation="vertical"
	android:background="@color/white">
	<RelativeLayout
		android:id="@+id/user_layout_header"
		android:layout_width="match_parent"
		android:layout_height="160dp"
		android:layout_alignParentTop="true" 
		android:background="@drawable/user_bg" >
		<ImageButton
		    android:id="@+id/user_button_photo"
		    android:layout_width="70dp"
		    android:layout_height="70dp"
			android:layout_marginTop="30dp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerInParent="false"
		    android:layout_gravity="center"
		    android:adjustViewBounds="true"
		    android:background="@drawable/user_photo_null"
		    android:padding="0dip"
		    android:scaleType="fitXY" />
		<ImageView
		    android:id="@+id/user_status"
		    android:layout_width="20dp"
		    android:layout_height="20dp"
		    android:layout_alignRight="@id/user_button_photo"
		    android:layout_alignBottom="@id/user_button_photo"
		    android:layout_marginBottom="10dp"
		    android:layout_marginRight="0dp"
		    android:src="@drawable/icon_user_status"
		    android:visibility="gone" />
        <TextView
            android:id="@+id/user_label_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
			android:layout_below ="@+id/user_button_photo"
        	android:layout_marginTop="10dp"
            android:text="@string/user_name_default"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
	</RelativeLayout>
	<View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below ="@+id/user_layout_header"
        android:background="@color/grey_bg" />
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_gravity="center_vertical"
	    android:orientation="horizontal">
	    <RelativeLayout 
	        android:id="@+id/memo_layout_1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:orientation="vertical">
	        <ImageView
	        	android:id="@+id/memo_image_1"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentTop="true"
	            android:gravity="center"
	            android:scaleType="centerInside"
	            android:src="@drawable/memo_1" />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_below="@id/memo_image_1"
	            android:text="待评分"
	            android:textSize="15sp"
	            android:textColor="@color/grey_text"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:id="@+id/memo_layout_2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:orientation="vertical">
	        <ImageView
	        	android:id="@+id/memo_image_2"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentTop="true"
	            android:gravity="center"
	            android:scaleType="centerInside"
	            android:src="@drawable/memo_2" />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_below="@id/memo_image_2"
	            android:text="待付款"
	            android:textSize="15sp"
	            android:textColor="@color/grey_text"/>
	    </RelativeLayout>
		<RelativeLayout 
	        android:id="@+id/memo_layout_3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:orientation="vertical">
	        <ImageView
	        	android:id="@+id/memo_image_3"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentTop="true"
	            android:gravity="center"
	            android:scaleType="centerInside"
	            android:src="@drawable/memo_3" />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_below="@id/memo_image_3"
	            android:text="待预约"
	            android:textSize="15sp"
	            android:textColor="@color/grey_text"/>
	    </RelativeLayout>
	</LinearLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_bg" />
	<RelativeLayout
		android:id="@+id/user_layout_order"
	    android:layout_width="match_parent"
	    android:layout_height="65dp"
	    android:orientation="horizontal">  
	    <ImageView
	        android:id="@+id/user_image_order"
	        android:layout_width="34dp"
	        android:layout_height="34dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:src="@drawable/icon_user_myorder"
	        android:scaleType="centerInside" />"
		<TextView
		    android:id="@+id/user_label_order"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/user_image_order"
		    android:layout_centerVertical="true"
		    android:layout_gravity="center_vertical"
			android:textSize="16sp"
		    android:layout_marginLeft="10dp"
		    android:text="我的订单" />
	    <ImageView
	       	android:layout_width="20dp"
	       	android:layout_height="20dp"
		    android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
	       	android:layout_marginRight="10dp"
		    android:src="@drawable/arrow" />
	</RelativeLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_bg" />
	<RelativeLayout
		android:id="@+id/user_layout_money"
	    android:layout_width="match_parent"
	    android:layout_height="65dp"
	    android:orientation="horizontal">  
	    <ImageView
	        android:id="@+id/user_image_money"
	        android:layout_width="34dp"
	        android:layout_height="34dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:src="@drawable/icon_user_mymoney"
	        android:scaleType="centerInside" />"
		<TextView
		    android:id="@+id/user_label_money"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/user_image_money"
		    android:layout_centerVertical="true"
		    android:layout_gravity="center_vertical"
			android:textSize="16sp"
		    android:layout_marginLeft="10dp"
		    android:text="我的钱包" />
	    <ImageView
	       	android:layout_width="20dp"
	       	android:layout_height="20dp"
		    android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
	       	android:layout_marginRight="10dp"
		    android:src="@drawable/arrow" />
	</RelativeLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_bg" />
</LinearLayout>
