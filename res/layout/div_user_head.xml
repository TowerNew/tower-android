<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" 
	android:orientation="vertical"
	android:background="@color/white">
	<FrameLayout 
	    android:layout_width="match_parent"
		android:layout_height="200dp">
	<RelativeLayout
		android:id="@+id/user_layout_header"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:layout_alignParentTop="true" 
		android:background="@color/user_background">
		<ImageButton
		    android:id="@+id/user_button_photo"
		    android:layout_width="70dp"
		    android:layout_height="70dp"
			android:layout_marginTop="30dp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerInParent="false"
		    android:layout_gravity="center"
		    android:adjustViewBounds="true"
		    android:background="@drawable/user_photo_null"
		    android:padding="0dip"
		    android:scaleType="fitXY" />
        <TextView
            android:id="@+id/user_label_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
			android:layout_below ="@+id/user_button_photo"
        	android:layout_marginTop="10dp"
            android:text="@string/user_name_default"
            android:textColor="#ffffffff"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/userinfo_image_qcode"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/user_button_photo"
            android:layout_marginRight="18dp"
            android:layout_gravity="center"
			android:scaleType="fitXY"
			android:adjustViewBounds="true"
			android:src="@drawable/icon_qr_code"
			android:padding="0dip"
			android:visibility="gone"/>
        <TextView
            android:id="@+id/user_status"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/user_label_caption"
            android:layout_alignTop="@+id/user_button_photo"
            android:layout_marginLeft="35dp"
            android:padding="2dp"
            android:text="待认证"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/user_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_v2" />

		</RelativeLayout>
        <LinearLayout
            android:id="@+id/user_layout_headerbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="160dp"
            android:background="@color/user_backcolor">
         <RelativeLayout 
	        android:id="@+id/user_layout_01"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:orientation="vertical">               
                <ImageView
                    android:id="@+id/user_img_signin"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/user_label_signin"
                    android:layout_marginRight="30dp"
                    android:layout_toLeftOf="@+id/user_label_signin"
                    android:src="@drawable/icon_user_mycollection" />
		        <TextView
                    android:id="@+id/user_label_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:text="收藏"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />
         </RelativeLayout>
         <RelativeLayout 
	        android:id="@+id/user_layout_02"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:orientation="vertical">
            <ImageView
                android:id="@+id/user_img_mycollection"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/user_label_mycollection"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:src="@drawable/icon_user_signin" />

            <TextView
                android:id="@+id/user_label_mycollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/user_img_mycollection"
                android:text="签到"
                android:textColor="#ffffffff"
                android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>       
      </FrameLayout>
	<View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_below ="@+id/user_layout_header"
        android:background="@color/grey_bg" />
	<View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider" />
	<RelativeLayout
	    android:id="@+id/user_layout_money"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:layout_alignParentTop="true"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >

	    <TextView
	        android:id="@+id/user_label_money"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="15dp"
	        android:text="我的钱包"
	        android:textSize="14sp" 
	        android:textColor="@color/user_text"/>
	     <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="15dp"
	        android:layout_height="15dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/arrow" />

	     <TextView
	         android:id="@+id/user_text_balance"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignBottom="@+id/imageView1"
	         android:layout_toLeftOf="@+id/imageView1"
	         android:text=""
	         android:textColor="@color/account_money"
	         android:textSize="11sp" />

	     <TextView
	         android:id="@+id/user_label_balance"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignBaseline="@+id/user_text_balance"
	         android:layout_alignBottom="@+id/user_text_balance"
	         android:layout_marginRight="14dp"
	         android:layout_toLeftOf="@+id/user_text_balance"
	         android:text="账户余额"
	         android:textSize="11sp" 
	         android:textColor="@color/account_money"/>
	</RelativeLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider"/>	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="68dp"
	    android:layout_gravity="center_vertical"
	    android:orientation="horizontal">
	      <RelativeLayout 
	        android:id="@+id/money_layout_00"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:orientation="vertical">
	        <TextView
	            android:id="@+id/money_text_coupons"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:text="0张"
	            android:textColor="@color/user_text"
	            android:textSize="15sp" />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"	            
	            android:layout_centerHorizontal="true"
	            android:padding="5dp"
	            android:text="优惠券"
	            android:textSize="12sp"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:id="@+id/money_layout_01"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:orientation="vertical">	        
	        <TextView
	            android:id="@+id/money_text_points"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:text="0分"
	            android:textColor="@color/user_text"
	            android:textSize="15sp" />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:padding="5dp"
	            android:text="积分"
	            android:textSize="12sp"/>
	    </RelativeLayout>
	   </LinearLayout>
	   <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider"/>	
	   <View 
	        android:layout_width="match_parent"
	        android:layout_height="15dp"
	        android:background="@color/grey_bg" />
		<View 
	        android:layout_width="match_parent"
	        android:layout_height="2dp"
	        android:background="@drawable/divider" />
	   <RelativeLayout
	       android:id="@+id/user_layout_order"
	       android:layout_width="match_parent"
	       android:layout_height="40dp"
	       android:orientation="horizontal" >
	       <TextView
	           android:id="@+id/user_label_order"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignParentLeft="true"
	           android:layout_centerVertical="true"
	           android:layout_marginLeft="15dp"
	           android:text="我的订单"
	           android:textColor="@color/user_text"
	           android:textSize="14sp" />
	       <TextView
	         android:id="@+id/user_text_order"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignBottom="@+id/imageView2"
	         android:layout_toLeftOf="@+id/imageView2"
	         android:text="全部订单"
	         android:textSize="11sp"
	         android:textColor="@color/account_money"/>
	        <ImageView
	           android:id="@+id/imageView2"
	           android:layout_width="15dp"
	           android:layout_height="15dp"
	           android:layout_alignParentRight="true"
	           android:layout_centerVertical="true"
	           android:layout_marginRight="10dp"
	           android:src="@drawable/arrow" />
	   </RelativeLayout>	 
	   <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider"/>  
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="68dp"
	    android:layout_gravity="center_vertical"
	    android:orientation="horizontal">
	    <RelativeLayout 
	        android:id="@+id/memo_layout_1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:orientation="vertical">
	        <ImageView
	        	android:id="@+id/memo_image_1"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentTop="true"
	            android:gravity="center"
	            android:scaleType="centerInside"
	            android:src="@drawable/memo_1" />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_below="@id/memo_image_1"
	            android:layout_marginTop="10dp"
	            android:text="待评分"
	            android:textSize="11sp"
	            android:textColor="@color/grey_text"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:id="@+id/memo_layout_2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:orientation="vertical">
	        <ImageView
	        	android:id="@+id/memo_image_2"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentTop="true"
	            android:gravity="center"
	            android:scaleType="centerInside"
	            android:src="@drawable/memo_2" />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_below="@id/memo_image_2"
	            android:layout_marginTop="10dp"
	            android:text="待付款"
	            android:textSize="11sp"
	            android:textColor="@color/grey_text"/>
	    </RelativeLayout>
		<RelativeLayout 
	        android:id="@+id/memo_layout_3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:orientation="vertical">
	        <ImageView
	        	android:id="@+id/memo_image_3"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentTop="true"
	            android:gravity="center"
	            android:scaleType="centerInside"
	            android:src="@drawable/memo_3" />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_below="@id/memo_image_3"
	            android:layout_marginTop="10dp"
	            android:text="待预约"
	            android:textSize="11sp"
	            android:textColor="@color/grey_text"/>
	    </RelativeLayout>
	</LinearLayout>	
	<View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider" />
	<View 
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/grey_bg" />
</LinearLayout>
