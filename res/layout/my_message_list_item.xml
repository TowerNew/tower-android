<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/message_mark_iv"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:background="#8B0000" />
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:layout_toRightOf="@id/message_mark_iv"
	    android:background="@color/white">

	    <TextView
	        android:id="@+id/message_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:ellipsize="end"
	        android:maxLines="2"
	        android:text="消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容"
	        android:layout_marginRight="10dp"
	        android:textColor="@color/black"
	        android:textSize="16sp" />

	    <TextView
	        android:id="@+id/mymessage_date_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@id/message_tv"
	        android:layout_marginTop="6dp"
	        android:layout_marginRight="10dp"
	        android:text="2016-09-17" />
	</RelativeLayout>
</RelativeLayout>